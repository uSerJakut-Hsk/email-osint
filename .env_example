# Advanced Email OSINT Tool - Environment Configuration
# Copy this file to .env and configure with your settings
# September 2025

# =============================================================================
# API CONFIGURATIONS
# =============================================================================

# Google API Key (Optional - for enhanced Google searches)
# Get from: https://console.developers.google.com/
GOOGLE_API_KEY=

# Google Custom Search Engine ID (Optional)
# Get from: https://cse.google.com/
GOOGLE_CSE_ID=

# Have I Been Pwned API Key (Optional)
# Get from: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=

# Shodan API Key (Optional)
# Get from: https://shodan.io/
SHODAN_API_KEY=

# =============================================================================
# PROXY CONFIGURATIONS
# =============================================================================

# Proxy authentication (if your proxies require auth)
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_AUTH=username:password

# Default proxy settings
DEFAULT_PROXY_TIMEOUT=10
MAX_PROXY_RETRIES=3

# Proxy rotation settings
PROXY_ROTATION_ENABLED=true
PROXY_VALIDATION_ON_STARTUP=false

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# Request rate limiting (requests per minute)
MAX_REQUESTS_PER_MINUTE=30
REQUEST_DELAY_SECONDS=2

# Concurrent worker limits
DEFAULT_WORKERS=5
MAX_WORKERS=20

# Timeout settings (in seconds)
HTTP_TIMEOUT=15
SELENIUM_TIMEOUT=30
DNS_TIMEOUT=5

# =============================================================================
# SEARCH CONFIGURATIONS
# =============================================================================

# Default platforms to search (comma-separated)
DEFAULT_PLATFORMS=marketplaces,discussions,google

# Maximum search results per platform
MAX_RESULTS_PER_PLATFORM=10

# Search depth settings
DEEP_SEARCH_ENABLED=false
RECURSIVE_SEARCH_DEPTH=2

# =============================================================================
# OUTPUT CONFIGURATIONS
# =============================================================================

# Default output format
DEFAULT_OUTPUT_FORMAT=json

# Results directory
RESULTS_DIR=results

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file rotation
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# User agent rotation
USER_AGENT_ROTATION=true

# SSL verification
SSL_VERIFY=true

# Headers randomization
RANDOMIZE_HEADERS=true

# Session persistence
PERSISTENT_SESSIONS=false

# =============================================================================
# DATABASE CONFIGURATIONS (Optional)
# =============================================================================

# SQLite database for caching results
CACHE_ENABLED=true
CACHE_DB_PATH=cache/osint_cache.db
CACHE_EXPIRY_HOURS=24

# =============================================================================
# EMAIL VALIDATION SETTINGS
# =============================================================================

# DNS validation timeout
DNS_VALIDATION_TIMEOUT=10

# SMTP validation (can slow down searches)
SMTP_VALIDATION_ENABLED=false
SMTP_VALIDATION_TIMEOUT=10

# Disposable email detection
CHECK_DISPOSABLE_DOMAINS=true

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=

# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Email notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# =============================================================================
# SELENIUM/BROWSER SETTINGS
# =============================================================================

# Chrome browser settings
CHROME_HEADLESS=true
CHROME_WINDOW_SIZE=1920,1080
CHROME_USER_DATA_DIR=

# Browser binary path (auto-detected if not specified)
CHROME_BINARY_PATH=

# WebDriver settings
WEBDRIVER_AUTO_UPDATE=true
WEBDRIVER_CACHE_VALID_RANGE=7

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug mode
DEBUG_MODE=false

# Verbose logging
VERBOSE_OUTPUT=false

# Save raw responses (for debugging)
SAVE_RAW_RESPONSES=false
RAW_RESPONSES_DIR=debug/raw_responses

# Screenshot on errors (Selenium)
SCREENSHOT_ON_ERROR=false
SCREENSHOTS_DIR=debug/screenshots

# =============================================================================
# PLATFORM-SPECIFIC SETTINGS
# =============================================================================

# Google search settings
GOOGLE_SEARCH_COUNTRY=US
GOOGLE_SEARCH_LANGUAGE=en
GOOGLE_RESULTS_PER_PAGE=10

# Reddit settings
REDDIT_USER_AGENT=OSINT-Email-Tool/1.0

# GitHub settings
GITHUB_TOKEN=

# =============================================================================
# COMPLIANCE & ETHICS
# =============================================================================

# Respect robots.txt
RESPECT_ROBOTS_TXT=true

# Minimum delay between requests (seconds)
MIN_REQUEST_DELAY=1

# Maximum pages to crawl per site
MAX_PAGES_PER_SITE=5

# Honor Do Not Track
HONOR_DNT=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Automatic backup of results
AUTO_BACKUP_ENABLED=false
BACKUP_DIRECTORY=backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CUSTOM CONFIGURATIONS
# =============================================================================

# Custom platform configuration file
CUSTOM_PLATFORMS_FILE=config/custom_platforms.json

# Additional search terms
ADDITIONAL_SEARCH_TERMS=

# Exclude domains (comma-separated)
EXCLUDED_DOMAINS=

# Include only domains (comma-separated, overrides exclude)
INCLUDED_DOMAINS=

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Machine learning classification (experimental)
ML_CLASSIFICATION_ENABLED=false
ML_MODEL_PATH=models/classifier.pkl

# Advanced pattern matching
ADVANCED_PATTERNS_ENABLED=false

# Real-time monitoring
REALTIME_MONITORING=false

# =============================================================================
# ENVIRONMENT DETECTION
# =============================================================================

# Current environment (development, testing, production)
ENVIRONMENT=development

# Installation ID (auto-generated)
INSTALLATION_ID=

# Version check
CHECK_FOR_UPDATES=true
UPDATE_CHECK_INTERVAL=86400

# =============================================================================
# NOTES
# =============================================================================
# 1. Remove or comment out any settings you don't need
# 2. Never commit this file with real API keys to version control
# 3. Use strong, unique passwords for any authentication
# 4. Regularly rotate API keys and credentials
# 5. Monitor your API usage to avoid unexpected charges
# 6. Test settings in development environment first